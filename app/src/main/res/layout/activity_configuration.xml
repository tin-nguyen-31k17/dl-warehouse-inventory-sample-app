<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Boolean Property -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Airplane Mode (Boolean)" />

        <Switch
            android:id="@+id/switchBooleanProperty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Numeric Property -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brightness Level (Numeric)" />

        <EditText
            android:id="@+id/editTextNumericProperty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <!-- Text Property -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device Name Base (Text)" />

        <EditText
            android:id="@+id/editTextTextProperty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Enum Property -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bluetooth Pairing Policy (Enum)" />

        <Spinner
            android:id="@+id/spinnerEnumProperty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Device Name Suffix -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device Name Suffix (Enum)" />

        <Spinner
            android:id="@+id/spinnerDeviceNameSuffix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Blob Property -->
        <Button
            android:id="@+id/buttonManageBlobProperty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage BT Silent Pairing Whitelisting (Blob)" />

        <!-- Button to set properties -->
        <Button
            android:id="@+id/buttonSetProperties"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Properties" />

        <!-- Button to set properties via Intent -->
        <Button
            android:id="@+id/buttonSetPropertiesViaIntent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Properties via Intent" />

    </LinearLayout>
</ScrollView>
