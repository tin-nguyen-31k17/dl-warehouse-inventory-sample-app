<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/activity_keyboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Keyboard Remapping Section -->
            <TextView
                android:id="@+id/textViewKeyboardRemap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/keyboard_remapping"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Map Key Code Button -->
            <Button
                android:id="@+id/buttonMapKeyCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/map_key_code"
                android:layout_marginBottom="8dp" />

            <!-- Map Unicode Button -->
            <Button
                android:id="@+id/buttonMapUnicode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/map_unicode"
                android:layout_marginBottom="8dp" />

            <!-- Map Intent Button -->
            <Button
                android:id="@+id/buttonMapIntent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/map_intent"
                android:layout_marginBottom="16dp" />

            <!-- Custom Action Mapping Section -->
            <TextView
                android:id="@+id/textViewCustomAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/custom_action_mapping"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Map Custom Action Button -->
            <Button
                android:id="@+id/buttonMapCustomAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/map_custom_action"
                android:layout_marginBottom="16dp" />

            <!-- Push To Talk (PTT) Section -->
            <TextView
                android:id="@+id/textViewPTT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/push_to_talk_configuration"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Configure PTT Button -->
            <Button
                android:id="@+id/buttonConfigurePTT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/configure_ptt"
                android:layout_marginBottom="16dp" />

            <!-- Utilities Section -->
            <TextView
                android:id="@+id/textViewUtilities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/utilities"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Export Configuration Button -->
            <Button
                android:id="@+id/buttonExportConfig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/export_configuration"
                android:layout_marginBottom="8dp" />

            <!-- Import Configuration Button -->
            <Button
                android:id="@+id/buttonImportConfig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/import_configuration"
                android:layout_marginBottom="8dp" />

            <!-- Delete Mappings Button -->
            <Button
                android:id="@+id/buttonDeleteMappings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete_all_mappings"
                android:layout_marginBottom="16dp" />

            <!-- General Settings -->
            <TextView
                android:id="@+id/textViewGeneralSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/general_settings"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Lock Key Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/textViewLockInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/lock_key_input" />

                <Switch
                    android:id="@+id/switchLockInput"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:minHeight="48dp"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Trigger Source -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/textViewTriggerSource"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/trigger_source" />

                <Spinner
                    android:id="@+id/spinnerTriggerSource"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Enable Trigger Source -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/textViewEnableTrigger"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/enable_trigger_source" />

                <Switch
                    android:id="@+id/switchEnableTrigger"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:minHeight="48dp"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Auto Scan Section -->
            <TextView
                android:id="@+id/textViewAutoScan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/auto_scan"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Enable Auto Scan -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/textViewAutoScanEnable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/enable_auto_scan" />

                <Switch
                    android:id="@+id/switchAutoScanEnable"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:minHeight="48dp"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Auto Scan Range -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/textViewAutoScanRange"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/auto_scan_range" />

                <Spinner
                    android:id="@+id/spinnerAutoScanRange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Motion Trigger Section -->
            <TextView
                android:id="@+id/textViewMotionTrigger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/motion_trigger"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Enable Motion Trigger -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/textViewMotionTriggerEnable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/enable_motion_trigger" />

                <Switch
                    android:id="@+id/switchMotionTriggerEnable"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:minHeight="48dp"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Motion Trigger Sensitivity -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/textViewMotionSensitivity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/motion_trigger_sensitivity" />

                <EditText
                    android:id="@+id/editTextMotionSensitivity"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="@string/hint_motion_sensitivity" />
            </LinearLayout>

            <!-- Vibrate on Motion Detection -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/textViewVibrateOnMotion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/vibrate_on_motion" />

                <Switch
                    android:id="@+id/switchVibrateOnMotion"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:minHeight="48dp"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Key Remapping Section -->
            <TextView
                android:id="@+id/textViewKeyRemapping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/key_remapping"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Reset Key Remapping -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/textViewResetRemapping"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/reset_key_remapping" />

                <Switch
                    android:id="@+id/switchResetRemapping"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:minHeight="48dp"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Source Key -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/textViewSourceKey"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/source_key" />

                <Spinner
                    android:id="@+id/spinnerSourceKey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Remap Type -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/textViewRemapType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/remap_type" />

                <Spinner
                    android:id="@+id/spinnerRemapType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Target -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/textViewTarget"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/target" />

                <EditText
                    android:id="@+id/editTextTarget"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </LinearLayout>

            <!-- Push To Talk (PTT) Settings -->
            <TextView
                android:id="@+id/textViewPTTSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ptt_settings"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Enable Notification -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/textViewEnableNotification"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/enable_notification" />

                <Switch
                    android:id="@+id/switchEnableNotification"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:minHeight="48dp"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- PTT with Screen Lock -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/textViewPTTScreenLock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/ptt_with_screen_lock" />

                <Switch
                    android:id="@+id/switchPTTScreenLock"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:minHeight="48dp"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Walkie-Talkie App -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/textViewWalkieTalkieApp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/walkie_talkie_app" />

                <EditText
                    android:id="@+id/editTextWalkieTalkieApp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_package_name"
                    android:inputType="text" />
            </LinearLayout>

            <!-- Advanced Keyboard Settings -->
            <TextView
                android:id="@+id/textViewAdvancedKeyboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/advanced_keyboard_settings"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Backlight Control Enable -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/textViewBacklightEnable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/enable_backlight" />

                <Switch
                    android:id="@+id/switchBacklightEnable"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:minHeight="48dp"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Backlight Brightness -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/textViewBacklightBrightness"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/backlight_brightness" />

                <SeekBar
                    android:id="@+id/seekBarBacklightBrightness"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="50" />
            </LinearLayout>

            <!-- Backlight Timeout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/textViewBacklightTimeout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/backlight_timeout" />

                <EditText
                    android:id="@+id/editTextBacklightTimeout"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="@string/hint_backlight_timeout" />
            </LinearLayout>

            <!-- Multitap Delay -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/textViewMultitapDelay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/multitap_delay" />

                <EditText
                    android:id="@+id/editTextMultitapDelay"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="@string/hint_multitap_delay" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBottomNavBackground"
        app:itemIconTint="@color/nav_item_color_selector"
        app:itemTextColor="@color/nav_item_color_selector"
        app:menu="@menu/bottom_navigation_menu" />
</RelativeLayout>
